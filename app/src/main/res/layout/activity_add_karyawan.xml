<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <EditText
        android:id="@+id/edit_namaKaryawan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nama"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_jabatan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jabatan"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_namaKaryawan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/edit_kontak"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Kontak"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/edit_jabatan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:backgroundTint="@color/DarkBlue"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_kontak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>